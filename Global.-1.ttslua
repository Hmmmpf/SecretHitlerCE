function tellRole(player)
	local pRBG
	if player == 'Black' then
		for _, l in pairs(fascists) do
			pRBG = stringColorToRGB(l)
			broadcastToColor(l .. ' is ' .. text.fascistArticle .. ' ' .. text.fascist .. '!', player, pRBG)
