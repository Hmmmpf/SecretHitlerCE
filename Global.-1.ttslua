function nextPres(playerIn)
	local nextList = {White = 'Brown', Brown = 'Red', Red = 'Orange', Orange = 'Yellow', Yellow = 'Green', Green = 'Teal', Teal = 'Blue', Blue = 'Purple', Purple = 'Pink', Pink = 'White'}
	local checkPres = playerIn
	local returnVal = nextList[checkPres]


	while not inTable(players, returnVal) or deadPlayer[returnVal] do
		checkPres = returnVal
		returnVal = nextList[checkPres]
	end

	return returnVal
end

