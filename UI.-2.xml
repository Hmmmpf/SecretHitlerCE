<VerticalLayout id="UIActionExp" padding="0 0 0 0" height="8%" width="33%" rectAlignment="LowerLeft" visibility="">
    <HorizontalLayout padding="135 0 0 0">
        <Dropdown id="action2" onValueChanged="UIAction">
            <Option selected="true" >Choose Action</Option>
            <Option>Choose Chancellor</Option>
            <Option>Inspect Player</Option>
            <Option>Give Presidency To</Option>
            <Option>Discard Ability</Option>
            <Option>Reveal Ability</Option>
            <Option>Take Ability from Deck</Option>
            <Option>Give Card to</Option>
        </Dropdown>
    </HorizontalLayout>

    <HorizontalLayout padding="135 0 0 0">
        <InputField onValueChanged="UIInputExp" width="5%">Enter Card Name</InputField>
        <Dropdown id="color2" onValueChanged="UIColor">
            <Option selected="true">Choose Player</Option>
            <Option>White</Option>
            <Option>Brown</Option>
            <Option>Red</Option>
            <Option>Orange</Option>
            <Option>Yellow</Option>
            <Option>Green</Option>
            <Option>Teal</Option>
            <Option>Blue</Option>
            <Option>Purple</Option>
            <Option>Pink</Option>
            <Option>Tan</Option>
            <Option>Maroon</Option>
        </Dropdown>
        <Button id="start2" onClick="UIStart2">Start</Button>
    </HorizontalLayout>
</VerticalLayout>

